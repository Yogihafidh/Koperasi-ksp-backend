generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email       String            @unique
  password    String
  createdAt   DateTime          @default(now()) @db.Timestamptz(3)
  isActive    Boolean           @default(true)
  lastLoginAt DateTime?         @db.Timestamptz(3)
  updatedAt   DateTime          @updatedAt @db.Timestamptz(3)
  username    String            @unique
  id          Int               @id @default(autoincrement())
  auditTrails AuditTrail[]
  laporan     LaporanKeuangan[] @relation("LaporanGeneratedBy")
  nasabah     Nasabah?
  pegawai     Pegawai?
  roles       UserRole[]
}

model Role {
  id          Int              @id @default(autoincrement())
  name        String           @unique
  description String?
  permissions RolePermission[]
  users       UserRole[]
}

model Permission {
  id          Int              @id @default(autoincrement())
  code        String           @unique
  description String?
  roles       RolePermission[]
}

model UserRole {
  userId Int
  roleId Int
  role   Role @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

model RolePermission {
  roleId       Int
  permissionId Int
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

model Pegawai {
  id                 Int         @id @default(autoincrement())
  userId             Int         @unique
  nama               String
  jabatan            String
  noHp               String
  alamat             String
  statusAktif        Boolean     @default(true)
  createdAt          DateTime    @default(now()) @db.Timestamptz(3)
  nasabah            Nasabah[]
  user               User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  pinjamanVerifikasi Pinjaman[]  @relation("PinjamanVerifiedBy")
  transaksi          Transaksi[]
}

model Nasabah {
  id                 Int                @id @default(autoincrement())
  userId             Int?               @unique
  pegawaiId          Int
  nomorAnggota       String             @unique
  nama               String
  nik                String             @unique
  alamat             String
  noHp               String
  pekerjaan          String
  instansi           String?
  penghasilanBulanan Decimal
  tanggalLahir       DateTime           @db.Timestamptz(3)
  tanggalDaftar      DateTime           @db.Timestamptz(3)
  status             NasabahStatus
  catatan            String?
  createdAt          DateTime           @default(now()) @db.Timestamptz(3)
  updatedAt          DateTime           @updatedAt @db.Timestamptz(3)
  deletedAt          DateTime?          @db.Timestamptz(3)
  pegawai            Pegawai            @relation(fields: [pegawaiId], references: [id])
  user               User?              @relation(fields: [userId], references: [id])
  dokumen            NasabahDokumen[]
  pinjaman           Pinjaman[]
  rekeningSimpanan   RekeningSimpanan[]
  transaksi          Transaksi[]
}

model NasabahDokumen {
  id           Int          @id @default(autoincrement())
  nasabahId    Int
  jenisDokumen JenisDokumen
  fileUrl      String
  uploadedAt   DateTime     @default(now()) @db.Timestamptz(3)
  nasabah      Nasabah      @relation(fields: [nasabahId], references: [id], onDelete: Cascade)
}

model RekeningSimpanan {
  id            Int           @id @default(autoincrement())
  nasabahId     Int
  jenisSimpanan JenisSimpanan
  saldoBerjalan Decimal
  createdAt     DateTime      @default(now()) @db.Timestamptz(3)
  deletedAt     DateTime?     @db.Timestamptz(3)
  nasabah       Nasabah       @relation(fields: [nasabahId], references: [id])
  transaksi     Transaksi[]
}

model Pinjaman {
  id                 Int            @id @default(autoincrement())
  nasabahId          Int
  jumlahPinjaman     Decimal
  bungaPersen        Decimal
  tenorBulan         Int
  sisaPinjaman       Decimal
  status             PinjamanStatus
  verifiedById       Int?
  tanggalPersetujuan DateTime?     @db.Timestamptz(3)
  deletedAt          DateTime?     @db.Timestamptz(3)
  nasabah            Nasabah        @relation(fields: [nasabahId], references: [id])
  verifiedBy         Pegawai?       @relation("PinjamanVerifiedBy", fields: [verifiedById], references: [id])
  transaksi          Transaksi[]
}

model Transaksi {
  id                 Int               @id @default(autoincrement())
  nasabahId          Int
  pegawaiId          Int
  rekeningSimpananId Int?
  pinjamanId         Int?
  jenisTransaksi     JenisTransaksi
  nominal            Decimal
  tanggal            DateTime          @db.Timestamptz(3)
  metodePembayaran   String
  statusTransaksi    StatusTransaksi
  urlBuktiTransaksi  String?
  catatan            String?
  createdAt          DateTime          @default(now()) @db.Timestamptz(3)
  deletedAt          DateTime?         @db.Timestamptz(3)
  nasabah            Nasabah           @relation(fields: [nasabahId], references: [id])
  pegawai            Pegawai           @relation(fields: [pegawaiId], references: [id])
  pinjaman           Pinjaman?         @relation(fields: [pinjamanId], references: [id])
  rekeningSimpanan   RekeningSimpanan? @relation(fields: [rekeningSimpananId], references: [id])

  @@index([nasabahId])
  @@index([rekeningSimpananId])
  @@index([pinjamanId])
  @@index([tanggal])
}

model AuditTrail {
  id         Int         @id @default(autoincrement())
  userId     Int
  entityName String
  entityId   Int
  action     AuditAction
  oldValue   Json?
  newValue   Json?
  createdAt  DateTime    @default(now()) @db.Timestamptz(3)
  user       User        @relation(fields: [userId], references: [id])

  @@index([entityName, entityId])
  @@index([createdAt])
}

model LaporanKeuangan {
  id             Int           @id @default(autoincrement())
  periodeBulan   Int
  periodeTahun   Int
  totalSimpanan  Decimal
  totalPenarikan Decimal
  totalPinjaman  Decimal
  totalAngsuran  Decimal
  saldoAkhir     Decimal
  statusLaporan  StatusLaporan
  generatedById  Int
  generatedAt    DateTime      @default(now()) @db.Timestamptz(3)
  generatedBy    User          @relation("LaporanGeneratedBy", fields: [generatedById], references: [id])
}

model Setting {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime @updatedAt @db.Timestamptz(3)
}

enum NasabahStatus {
  PENDING
  AKTIF
  DITOLAK
  NONAKTIF
}

enum JenisDokumen {
  KTP
  KK
  SLIP_GAJI
}

enum JenisSimpanan {
  POKOK
  WAJIB
  SUKARELA
}

enum PinjamanStatus {
  PENDING
  DISETUJUI
  DITOLAK
  LUNAS
}

enum JenisTransaksi {
  SETORAN
  PENARIKAN
  PENCAIRAN
  ANGSURAN
}

enum StatusTransaksi {
  PENDING
  APPROVED
  REJECTED
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
}

enum StatusLaporan {
  DRAFT
  FINAL
}
